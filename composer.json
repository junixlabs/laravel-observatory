{
    "name": "junixlabs/laravel-observatory",
    "description": "Observability toolkit for Laravel applications - Monitor HTTP requests, outbound calls, queue jobs with Prometheus and SidMonitor support",
    "keywords": ["laravel", "monitoring", "observability", "prometheus", "metrics", "apm", "logging", "tracing"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "JunixLabs",
            "email": "chuongld@canawan.com"
        }
    ],
    "homepage": "https://github.com/junixlabs/laravel-observatory",
    "support": {
        "issues": "https://github.com/junixlabs/laravel-observatory/issues",
        "source": "https://github.com/junixlabs/laravel-observatory"
    },
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/http": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/log": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/queue": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/routing": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "promphp/prometheus_client_php": "^2.6"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpstan/phpstan": "^1.10|^2.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "JunixLabs\\Observatory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JunixLabs\\Observatory\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse src --level=5"
    },
    "extra": {
        "laravel": {
            "providers": [
                "JunixLabs\\Observatory\\ObservatoryServiceProvider"
            ],
            "aliases": {
                "Observatory": "JunixLabs\\Observatory\\Facades\\Observatory"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
